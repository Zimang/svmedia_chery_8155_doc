<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rlDABMainList"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="16dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="120dp"
        android:paddingEnd="@dimen/dab_mainlist_padding_end"
        android:paddingStart="@dimen/dab_mainlist_padding_start"
        android:scrollbarThumbVertical="@color/dab_scrollbar_color"
        android:scrollbarStyle="outsideInset"
        android:scrollbars="vertical"
        android:scrollbarSize="6dp"
        android:layoutDirection="ltr">

    </androidx.recyclerview.widget.RecyclerView>


    <RelativeLayout
        android:id="@+id/rlDABEmpty"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">

        <ImageView
            android:layout_width="360dp"
            android:layout_height="360dp"
            android:layout_centerHorizontal="true"
            android:src="@mipmap/img_default_resource"
            android:scaleType="center"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="319dp"
            android:text="@string/dab_research"
            android:textSize="28sp"
            android:textColor="@color/dab_loading_text_color" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rlDABScanning"
        android:layout_width="256dp"
        android:layout_height="256dp"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:background="@drawable/dab_loading_bg"
        android:visibility="gone">

        <ImageView
            android:id="@+id/ivRadioLoading"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginTop="35dp"
            android:src="@mipmap/icon_loading" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/ivRadioLoading"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="@string/dab_loading"
            android:textColor="@color/dab_loading_text_color"
            android:textSize="26sp" />

    </RelativeLayout>

</RelativeLayout>