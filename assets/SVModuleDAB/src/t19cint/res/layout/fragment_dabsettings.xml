                android:layout_marginEnd="40dp">
            </com.sy.swbt.SettingSwitchView>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rlDABSpecial"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_below="@id/rlDABEvent">
            <TextView
