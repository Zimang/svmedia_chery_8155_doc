<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rlDABSettings"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:visibility="gone">

    <RelativeLayout
        android:id="@+id/rlDABSettingsTop"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginTop="20dp">
        <ImageView
            android:id="@+id/ivDABSettingsBack"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="60dp"
            android:layout_centerVertical="true"
            android:src="@mipmap/icon_dab_settings_back">

        </ImageView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="120dp"
            android:layout_centerVertical="true"
            android:text="@string/dab_settings"
            android:textColor="@color/dab_rt_color"
            android:textSize="30sp">

        </TextView>
    </RelativeLayout>

    <ScrollView
        android:id="@+id/slDABSettings"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/rlDABSettingsTop"
        android:scrollbarThumbVertical="@color/dab_scrollbar_color"
        android:scrollbars="vertical"
        android:layout_marginEnd="16dp">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!--SF的布局-->
    <TextView
        android:id="@+id/tvDABSF"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginStart="480dp"
        android:layout_marginTop="14dp"
        android:textSize="28sp"
        android:textColor="@color/dab_text_color3"
        android:text="@string/dab_settings_sf">

    </TextView>
    <RelativeLayout
        android:id="@+id/rlDABSFBg"
        android:layout_width="960dp"
        android:layout_height="120dp"
        android:layout_below="@id/tvDABSF"
        android:layout_marginTop="20dp"
        android:layout_marginStart="480dp"
        android:background="@drawable/dab_ann_setting_bg">

        <RelativeLayout
            android:id="@+id/rlDABSF"
            android:layout_width="match_parent"
            android:layout_height="120dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_centerVertical="true"
                android:layout_marginStart="40dp"
                android:textSize="34sp"
                android:textColor="@color/dab_text_color5"
                android:text="@string/dab_settings_sf">

            </TextView>

            <com.sy.swbt.SettingSwitchView
                android:id="@+id/shDABSF"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="40dp">
            </com.sy.swbt.SettingSwitchView>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rlDABSFSL"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_below="@id/rlDABSF"
            android:visibility="gone">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_centerVertical="true"
                android:layout_marginStart="40dp"
                android:textSize="34sp"
                android:textColor="@color/dab_text_color5"
                android:text="@string/dab_settings_sf_sl">

            </TextView>

            <com.sy.swbt.SettingSwitchView
                android:id="@+id/shDABSFSL"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="40dp">
            </com.sy.swbt.SettingSwitchView>
        </RelativeLayout>

    </RelativeLayout>

    <!--公告设置的布局-->
    <TextView
        android:id="@+id/tvDABReminder"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_below="@id/rlDABSFBg"
        android:layout_marginTop="20dp"
        android:layout_marginStart="480dp"
        android:textSize="28sp"
        android:textColor="@color/dab_text_color3"
        android:text="@string/dab_settings_reminder">

    </TextView>

    <RelativeLayout
        android:id="@+id/rlDABReminderBg"
        android:layout_width="960dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvDABReminder"
        android:layout_marginTop="20dp"
        android:layout_marginStart="480dp"
        android:background="@drawable/dab_ann_setting_bg">

        <RelativeLayout
