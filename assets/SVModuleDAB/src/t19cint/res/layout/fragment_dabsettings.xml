                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="40dp">
            </com.sy.swbt.SettingSwitchView>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rlDABTF"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_below="@id/rlDABRTF">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_centerVertical="true"
                android:layout_marginStart="40dp"
                android:textSize="34sp"
                android:textColor="@color/dab_text_color5"
                android:text="@string/dab_reminder_tf">

            </TextView>

            <com.sy.swbt.SettingSwitchView
                android:id="@+id/shDABTF"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="40dp">
            </com.sy.swbt.SettingSwitchView>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rlDABWarning"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_below="@id/rlDABTF">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_centerVertical="true"
                android:layout_marginStart="40dp"
                android:textSize="34sp"
                android:textColor="@color/dab_text_color5"
                android:text="@string/dab_reminder_warning">

            </TextView>

            <com.sy.swbt.SettingSwitchView
                android:id="@+id/shDABWarning"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="40dp">
            </com.sy.swbt.SettingSwitchView>
        </RelativeLayout>

        <RelativeLayout
