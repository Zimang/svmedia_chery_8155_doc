                android:layout_marginStart="40dp"
                android:textSize="34sp"
                android:textColor="@color/dab_text_color5"
                android:text="@string/dab_reminder_ta">

            </TextView>

            <com.sy.swbt.SettingSwitchView
                android:id="@+id/shDABRTF"
