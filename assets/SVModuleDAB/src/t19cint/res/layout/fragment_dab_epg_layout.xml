<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="70dp"
        android:layout_marginBottom="92dp">


    <ImageView
        android:id="@+id/ivDABEPGBack"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="70dp"
        android:layout_marginTop="15dp"
        android:src="@mipmap/dab_playlist_back">

    </ImageView>

    <TextView
        android:id="@+id/tvDABEPGName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/ivDABEPGBack"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:textSize="34sp"
        android:textColor="@color/dab_text_color4"
        android:text="@string/dab_epg">

    </TextView>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvEPGDate"
        android:layout_width="400dp"
        android:layout_height="match_parent"
        android:layout_below="@id/ivDABEPGBack">

    </androidx.recyclerview.widget.RecyclerView>

    <View
        android:id="@+id/vDividing"
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:layout_below="@id/ivDABEPGBack"
        android:layout_toEndOf="@id/rvEPGDate"
        android:background="@mipmap/epg_rv_dividing">

    </View>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvEPGDetail"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/ivDABEPGBack"
        android:layout_toEndOf="@id/vDividing"
        android:scrollbarThumbVertical="@color/dab_scrollbar_color"
        android:scrollbars="vertical"
        android:layout_marginEnd="16dp">

    </androidx.recyclerview.widget.RecyclerView>
        <TextView
            android:id="@+id/tvEmptyView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:textSize="28sp"
            android:textColor="@color/dab_text_color1"
            android:text="@string/dab_no_epg"
            android:gravity="center"
            android:visibility="gone">
        </TextView>

    </RelativeLayout>
</RelativeLayout>