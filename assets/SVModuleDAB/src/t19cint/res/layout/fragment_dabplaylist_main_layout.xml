<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="70dp"
        android:layout_marginBottom="92dp">


    <ImageView
        android:id="@+id/ivDABPlayListBack"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="35dp"
        android:src="@mipmap/dab_playlist_back">

    </ImageView>


    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tlDABPlayList"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:layout_centerHorizontal="true"
        android:overScrollMode="never"
        app:tabMode="auto"
        app:tabMaxWidth="0dp"
        app:tabBackground="@null"
        app:tabIndicator="@drawable/dab_tab_shape"
        app:tabIndicatorColor="@null"
        app:tabIndicatorFullWidth="false"
        app:tabIndicatorHeight="6dp"
        app:tabMinWidth="240dp"
        app:tabPaddingTop="16dp"
        app:tabRippleColor="@null"
        app:tabSelectedTextColor="@color/dab_rt_color"
        app:tabTextAppearance="@style/DABTabTextStyle"
        app:tabTextColor="@color/dab_text_color6" />

    <com.desaysv.moduledab.view.NoSmoothViewPager
        android:id="@+id/vpDABPlayListMain"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/tlDABPlayList"
        android:layout_marginTop="5dp" />
        <View
            android:id="@+id/vRadioBottomMask"
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:layout_alignParentBottom="true"
            android:background="@mipmap/dab_bottom_mask">

        </View>
    </RelativeLayout>

</RelativeLayout>