                    android:textColor="@color/dab_item_color"
                    android:textSize="36sp" />

                <com.sy.swbt.SettingSwitchView
                    android:id="@+id/scAnnProgram"
                    android:layout_width="95dp"
                    android:layout_height="50dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="36dp"
                    app:kswBackColor="@color/dab_switch_selector_color"
                    app:kswThumbHeight="50dp"
                    app:kswThumbWidth="50dp"/>
            </RelativeLayout>
            <!--开关-->
            <RelativeLayout
                android:id="@+id/rlAnnSport"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_below="@id/rlAnnProgram">

                <TextView
                    android:id="@+id/tvAnnSport"
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:layout_centerVertical="true"
                    android:gravity="center"
                    android:text="@string/dab_reminder_sport"
                    android:textColor="@color/dab_item_color"
                    android:textSize="36sp" />

                <com.sy.swbt.SettingSwitchView
                    android:id="@+id/scAnnSport"
                    android:layout_width="95dp"
                    android:layout_height="50dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="36dp"
                    app:kswBackColor="@color/dab_switch_selector_color"
                    app:kswThumbHeight="50dp"
                    app:kswThumbWidth="50dp"/>
            </RelativeLayout>
            <!--开关-->
            <RelativeLayout
                android:id="@+id/rlAnnFinancial"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_below="@id/rlAnnSport">

                <TextView
                    android:id="@+id/tvAnnFinancial"
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:layout_centerVertical="true"
                    android:gravity="center"
                    android:text="@string/dab_reminder_financial"
                    android:textColor="@color/dab_item_color"
                    android:textSize="36sp" />

                <com.sy.swbt.SettingSwitchView
                    android:id="@+id/scAnnFinancial"
                    android:layout_width="95dp"
                    android:layout_height="50dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="36dp"
                    app:kswBackColor="@color/dab_switch_selector_color"
