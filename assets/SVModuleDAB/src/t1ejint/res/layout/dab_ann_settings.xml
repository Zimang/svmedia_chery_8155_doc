                    android:textColor="@color/dab_item_color"
                    android:textSize="36sp" />

                <com.sy.swbt.SettingSwitchView
                    android:id="@+id/scAnnEvent"
                    android:layout_width="95dp"
                    android:layout_height="50dp"
                    android:layout_alignParentEnd="true"
