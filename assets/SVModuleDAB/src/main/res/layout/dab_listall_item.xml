<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rlDABItem"
    android:layout_width="match_parent"
    android:layout_height="130dp"
    android:layout_marginStart="70dp"
    android:layout_marginTop="14dp">


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="70dp">
        <com.desaysv.mediacommonlib.view.RadiusImageView
            android:id="@+id/ivLogo"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@mipmap/icon_logo"
            app:radius="@dimen/dab_item_radius"
            >
        </com.desaysv.mediacommonlib.view.RadiusImageView>

    <TextView
        android:id="@+id/tvProgramStationName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/ivLogo"
        android:layout_marginStart="60dp"
        android:layout_centerVertical="true"
        android:textSize="32sp"
        android:textColor="@color/dab_text_color"
        android:text="@string/dab_program_name"
        android:gravity="center">

    </TextView>

    <ImageView
        android:id="@+id/ivCollect"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="20dp"
        android:scaleType="center"
        android:src="@drawable/dab_img_collect"
        >
    </ImageView>

        <com.desaysv.mediacommonlib.view.AudioWaveView
            android:id="@+id/avDABListAni"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="38dp"
            android:layout_centerVertical="true"
            app:pointer_color="@color/dab_item_play_color"
            app:pointer_num="4"
            app:pointer_padding="0dp"
            app:pointer_sing_law_rate="0.2"
            app:pointer_top_fillet="0"
            app:pointer_width="3.5dp"
            android:visibility="gone">

        </com.desaysv.mediacommonlib.view.AudioWaveView>

    </RelativeLayout>
</RelativeLayout>