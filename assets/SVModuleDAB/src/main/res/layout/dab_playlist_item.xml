<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rlDABPlayItem"
    android:layout_width="match_parent"
    android:layout_height="130dp"
    android:layout_marginEnd="14dp"
    android:background="@drawable/dab_play_item_bg">


    <ImageView
        android:id="@+id/ivDABPlayListLike"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="10dp"
        android:layout_centerVertical="true"
        android:src="@mipmap/dab_img_collect">

    </ImageView>

    <TextView
        android:id="@+id/tvDABPlayListName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="110dp"
        android:layout_centerVertical="true"
        android:textColor="@color/dab_text_color"
        android:textSize="32sp"
        android:text="BBC Radio 2">

    </TextView>

    <com.desaysv.mediacommonlib.view.AudioWaveView
        android:id="@+id/tvDABPlayListAni"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="94dp"
        app:pointer_color="@color/dab_item_play_color"
        app:pointer_num="4"
        app:pointer_padding="0dp"
        app:pointer_sing_law_rate="0.2"
        app:pointer_top_fillet="0"
        app:pointer_width="3.5dp"
        android:visibility="gone">

    </com.desaysv.mediacommonlib.view.AudioWaveView>

    <TextView
        android:id="@+id/tvDABPlayListNum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:textColor="@color/dab_text_color1"
        android:textSize="28sp"
        android:text="01"
        android:visibility="gone">

    </TextView>
    <TextView
        android:id="@+id/tvDABPlayListEbleName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/tvDABPlayListNum"
        android:layout_marginStart="16dp"
        android:layout_marginTop="68dp"
        android:textColor="@color/dab_text_color1"
        android:textSize="24sp"
        android:text="BBC National DAB"
        android:visibility="gone">

    </TextView>

</RelativeLayout>