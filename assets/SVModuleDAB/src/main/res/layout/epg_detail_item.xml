<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rlEPGDetailItem"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    android:layout_marginStart="60dp">


    <TextView
        android:id="@+id/tvEPGTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="26sp"
        android:textColor="@color/epg_color"
        android:layout_centerVertical="true">

    </TextView>

    <com.desaysv.mediacommonlib.view.AudioWaveView

        android:id="@+id/awPlaying"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_toEndOf="@id/tvEPGTime"
        android:layout_marginStart="8dp"
        android:layout_centerInParent="true"
        app:pointer_color="@color/epg_text_color_playing"
        app:pointer_num="4"
        app:pointer_padding="0dp"
        app:pointer_sing_law_rate="0.2"
        app:pointer_top_fillet="0"
        app:pointer_width="3.5dp"
        android:visibility="gone">

    </com.desaysv.mediacommonlib.view.AudioWaveView>

    <TextView
        android:id="@+id/tvEPGDetailName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:textColor="@color/epg_color"
        android:layout_centerVertical="true"
        android:layout_marginStart="121dp">

    </TextView>

    <ImageView
        android:id="@+id/ivEPGMark"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="110dp"
        android:layout_centerVertical="true"
        android:src="@drawable/epg_mark"
        >
    </ImageView>

</RelativeLayout>