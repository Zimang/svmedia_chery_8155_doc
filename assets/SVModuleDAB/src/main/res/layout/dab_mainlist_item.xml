<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rlDABItem"
    android:layout_width="match_parent"
    android:layout_height="130dp"
    android:layout_marginStart="80dp"
    android:layout_marginTop="20dp">


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="70dp">
        <com.desaysv.mediacommonlib.view.RadiusImageView
            android:id="@+id/ivLogo"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@mipmap/icon_logo"
            app:radius="@dimen/dab_item_radius"
            >
        </com.desaysv.mediacommonlib.view.RadiusImageView>

    <TextView
        android:id="@+id/tvProgramStationName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/ivLogo"
        android:layout_marginStart="64dp"
        android:layout_centerVertical="true"
        android:textSize="32sp"
        android:textColor="@color/dab_text_color"
        android:text="@string/dab_program_name"
        android:gravity="center">

    </TextView>
        <ImageView
            android:id="@+id/ivItemPlayBg"
            android:layout_width="88dp"
            android:layout_height="88dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="11dp"
            android:src="@drawable/item_play_bg">

        </ImageView>
        <com.desaysv.mediacommonlib.view.AudioWaveView
            android:id="@+id/ivItemPlay"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="38dp"
            app:pointer_color="@color/dab_item_play_color"
            app:pointer_num="4"
            app:pointer_padding="0dp"
            app:pointer_sing_law_rate="0.2"
            app:pointer_top_fillet="0"
            app:pointer_width="3.5dp"
            android:visibility="visible" />
    </RelativeLayout>
</RelativeLayout>