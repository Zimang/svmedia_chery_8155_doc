<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_novice_guidance"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/translucent"
    android:baselineAligned="false"
    android:orientation="horizontal"
    android:visibility="visible">

    <LinearLayout
        android:id="@+id/ll_left"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_novice_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="135dp"
            android:src="@mipmap/usb_video_light_adjust" />

        <com.desaysv.moduleusbvideo.view.MarqueeTextView
            android:id="@+id/tv_novice_left"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="80dp"
            android:ellipsize="marquee"
            android:gravity="center"
            android:marqueeRepeatLimit="marquee_forever"
            android:paddingStart="25dp"
            android:paddingEnd="25dp"
            android:singleLine="true"
            android:text="@string/novice_guidance_left"
            android:textColor="@color/usbvideo_white"
            android:textSize="30sp" />

        <com.desaysv.moduleusbvideo.view.MarqueeTextView
            android:id="@+id/tv_novice_left_1"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_marginBottom="40dp"
            android:ellipsize="marquee"
            android:gravity="center"
            android:marqueeRepeatLimit="marquee_forever"
            android:paddingStart="25dp"
            android:paddingEnd="25dp"
            android:singleLine="true"
            android:text="@string/novice_guidance_adjust_brightness"
            android:textColor="@color/usbvideo_white"
            android:textSize="30sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_novice_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="105dp"
            android:src="@mipmap/usb_video_fast_adjust" />

        <com.desaysv.moduleusbvideo.view.MarqueeTextView
            android:id="@+id/tv_novice_content"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:ellipsize="marquee"
            android:gravity="center"
            android:marqueeRepeatLimit="marquee_forever"
            android:paddingStart="25dp"
            android:paddingEnd="25dp"
            android:singleLine="true"
            android:text="@string/novice_guidance_content"
            android:textColor="@color/usbvideo_white"
            android:textSize="30sp" />

        <com.desaysv.moduleusbvideo.view.MarqueeTextView
            android:id="@+id/tv_novice_content_1"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:ellipsize="marquee"
            android:gravity="center"
            android:marqueeRepeatLimit="marquee_forever"
            android:paddingStart="25dp"
            android:paddingEnd="25dp"
            android:singleLine="true"
            android:text="@string/novice_guidance_adjust_forward_and_backward"
            android:textColor="@color/usbvideo_white"
            android:textSize="30sp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/btn_got_it"
                android:layout_width="240dp"
                android:layout_height="70dp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="100dp"
                android:background="@drawable/shape_btn_exit_bg"
                android:text="@string/novice_guidance_got_it"
                android:textAllCaps="false"
                android:textColor="@color/usbvideo_white"
                android:textSize="30sp" />

        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_right"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_novice_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="135dp"
            android:src="@mipmap/usb_video_end_adjust" />
        <!--            android:rotation="180"-->
        <com.desaysv.moduleusbvideo.view.MarqueeTextView
            android:id="@+id/tv_novice_right"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="80dp"
            android:ellipsize="marquee"
            android:gravity="center"
            android:marqueeRepeatLimit="marquee_forever"
            android:paddingStart="25dp"
            android:paddingEnd="25dp"
            android:singleLine="true"
            android:text="@string/novice_guidance_right"
            android:textColor="@color/usbvideo_white"
            android:textSize="30sp" />

        <com.desaysv.moduleusbvideo.view.MarqueeTextView
            android:id="@+id/tv_novice_right_1"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_marginBottom="40dp"
            android:ellipsize="marquee"
            android:gravity="center"
            android:marqueeRepeatLimit="marquee_forever"
            android:paddingStart="25dp"
            android:paddingEnd="25dp"
            android:singleLine="true"
            android:text="@string/novice_guidance_adjust_adjust_sound"
            android:textColor="@color/usbvideo_white"
            android:textSize="30sp" />

    </LinearLayout>

</LinearLayout>