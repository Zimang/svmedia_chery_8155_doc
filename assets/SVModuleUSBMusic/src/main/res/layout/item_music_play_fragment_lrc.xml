<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="736dp"
    android:layout_height="503dp"
    tools:ignore="ResourceName">

    <com.desaysv.moduleusbmusic.ui.view.LyricsView
        android:id="@+id/lv_lrc"
        android:layout_width="660dp"
        android:layout_height="418dp"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="72dp"
        android:layout_marginEnd="40dp"
        android:ellipsize="marquee"
        android:ems="11"
        android:gravity="center"
        android:singleLine="true"
        app:defaultLyrics="@string/usb_music_no_lyrics"
        app:level1Padding="21dp"
        app:level2Padding="21dp"
        app:textColor="@color/usb_music_list_lrc_text_color"
        app:textColorShow="@color/usb_music_list_lrc_show_text_color"
        app:textShowSize="28sp"
        app:textSize="28sp" />

    <ImageView
        android:id="@+id/iv_lrc_bg"
        android:layout_width="660dp"
        android:layout_height="418dp"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="72dp"
        android:layout_marginEnd="40dp"
        android:background="@mipmap/img_song_lrc_bg_mask" />
</RelativeLayout>