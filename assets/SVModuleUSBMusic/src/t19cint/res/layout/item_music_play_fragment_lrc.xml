<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="660dp"
    android:layout_height="480dp"
    tools:ignore="ResourceName">

    <com.desaysv.moduleusbmusic.ui.view.LyricsView
        android:id="@+id/lv_lrc"
        android:layout_width="540dp"
        android:layout_height="480dp"
        android:layout_centerInParent="true"
        android:ellipsize="marquee"
        android:ems="11"
        android:gravity="center"
        android:singleLine="true"
        app:defaultLyrics=""
        app:level1Padding="-10dp"
        app:level2Padding="0dp"
        app:textColor="@color/usb_music_list_lrc_text_color"
        app:textColorShow="@color/usb_music_list_lrc_current_text_color"
        app:textShowSize="36sp"
        app:textSize="30sp" />

    <FrameLayout
        android:id="@+id/fl_default_view"
        android:layout_width="660dp"
        android:layout_height="480dp"
        android:visibility="gone">

        <ImageView
            android:layout_width="360dp"
            android:layout_height="260dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="110dp"
            android:src="@mipmap/img_default_resource_light" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="374dp"
            android:text="@string/usb_music_no_lyrics"
            android:textColor="@color/usb_music_list_lrc_default_text_color"
            android:textSize="28sp" />
    </FrameLayout>

    <ImageView
        android:id="@+id/iv_lrc_bg"
        android:layout_width="660dp"
        android:layout_height="258dp"
        android:layout_alignParentEnd="true"
        android:background="@mipmap/img_song_lrc_bg_mask" />

    <ImageView
        android:id="@+id/iv_lrc_btm_bg"
        android:layout_width="660dp"
        android:layout_height="70dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:background="@mipmap/img_mask_song_words_btm" />
</RelativeLayout>