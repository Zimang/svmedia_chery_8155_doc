<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="FirstTextViewItemStyle" tools:ignore="ResourceName">
        <item name="android:maxWidth">350dp</item>
        <item name="android:layout_width">350dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
        <item name="android:gravity">start|center_vertical</item>
        <item name="android:textColor">@color/usb_picture_white</item>
        <item name="android:textSize">36sp</item>
    </style>

    <style name="usb_picture_BottomButtonStyle">
        <item name="android:layout_width">@dimen/usb_picture_button_size</item>
        <item name="android:layout_height">@dimen/usb_picture_button_size</item>
        <item name="android:background">@null</item>
        <item name="android:layout_marginStart">100dp</item>
        <item name="android:padding">27dp</item>
    </style>

    <style name="usb_picture_file_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@null</item>
        <item name="android:textSize">32px</item>
        <item name="android:paddingTop">38dp</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="Theme.Chery8155app" parent="AppTheme" tools:ignore="ResourceName">
        <!-- 启动MainActivity的主题 -->
        <item name="android:windowFullscreen">false</item>

        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>

    </style>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@mipmap/bg3</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
    </style>

    <style name="dialogstyle" parent="android:style/Theme.Dialog">
        <!--设置dialog的背景-->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!--设置Dialog的windowFrame框为无-->
        <item name="android:windowFrame">@null</item>
        <!--设置无标题-->
        <item name="android:windowNoTitle">true</item>
        <!--是否浮现在activity之上-->
        <item name="android:windowIsFloating">true</item>
        <!--是否半透明-->
        <item name="android:windowIsTranslucent">true</item>
        <!--设置窗口内容不覆盖-->
        <item name="android:windowContentOverlay">@null</item>
        <!--背景是否模糊显示-->
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.6</item>
    </style>
</resources>