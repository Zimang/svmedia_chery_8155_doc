<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <include layout="@layout/usb_picture_speed_tips"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">

    </include>


    <RelativeLayout
        android:id="@+id/rl_full_screen_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.desaysv.usbpicture.view.CanScrollViewPager
            android:id="@+id/vpPicture"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
<!--        <RelativeLayout
            android:id="@+id/rl_mask"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:src="@mipmap/img_up_shadow"></ImageView>

            <ImageView
