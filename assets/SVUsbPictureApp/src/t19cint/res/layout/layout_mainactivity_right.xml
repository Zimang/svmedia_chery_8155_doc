<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="90dp"
    android:layout_marginBottom="91dp"
    android:layoutDirection="ltr"
    tools:context=".ui.MainActivity">

    <com.desaysv.usbpicture.view.CanScrollViewPager
        android:id="@+id/vp_root_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="69dp">

    </com.desaysv.usbpicture.view.CanScrollViewPager>

    <RelativeLayout
        android:id="@+id/rl_pictureList_root_control"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="70dp"
        android:layoutDirection="ltr"
        android:visibility="gone">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:src="@drawable/usb_picture_all_back_right">

        </ImageView>

        <TextView
            android:id="@+id/tv_current_dir"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="20dp"
            android:maxWidth="450dp"
            android:layout_toEndOf="@id/iv_back"
            android:layout_centerVertical="true"
            android:gravity="center_vertical|start"
            android:textColor="@color/name_color"
            android:ellipsize="end"
            android:text="Current dir"
            android:textSize="34sp"
            android:maxLines="1">

        </TextView>
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_main_title"
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="@string/app_name"
        android:textSize="30sp"
        android:gravity="center"
        android:layout_marginTop="2dp"
        android:textColor="@color/name_color">

    </TextView>

    <RelativeLayout
        android:id="@+id/rl_tab"
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true">

        <RelativeLayout
            android:id="@+id/rl_tab0"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="30dp">

            <TextView
                android:id="@+id/tv_tab_title0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="18dp"
                android:gravity="center"
                android:text="@string/album"
                android:textColor="@drawable/tab_text_selected"
                android:textSize="30sp">

            </TextView>

            <ImageView
                android:id="@+id/iv_tab_indicator0"
                android:layout_width="50dp"
                android:layout_height="7dp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:src="@drawable/tab_selected">
            </ImageView>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_tab1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="230dp">

            <TextView
                android:id="@+id/tv_tab_title1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:layout_marginTop="18dp"
                android:text="@string/gallery"
                android:textColor="@drawable/tab_text_selected"
                android:textSize="30sp">

            </TextView>

            <ImageView
                android:id="@+id/iv_tab_indicator1"
                android:layout_width="50dp"
                android:layout_height="7dp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:src="@drawable/tab_selected">

            </ImageView>

        </RelativeLayout>


    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/rl_album_edit"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="70dp"
        android:layout_marginEnd="120dp"
        android:visibility="gone">

        <ImageView
            android:id="@+id/iv_edit_close"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:src="@drawable/close">

        </ImageView>

        <TextView
            android:id="@+id/tv_select_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textSize="30sp"
            android:textColor="@color/name_color"
            android:layout_toEndOf="@id/iv_edit_close"
            android:layout_marginStart="19dp"
            android:text="@string/select_none"
            >
        </TextView>

        <ImageView
            android:id="@+id/iv_edit_delete"
            android:layout_width="120dp"
            android:layout_height="70dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@drawable/delete">

        </ImageView>

        <ImageView
            android:id="@+id/iv_edit_export"
            android:layout_width="120dp"
            android:layout_height="70dp"
            android:layout_toStartOf="@id/iv_edit_delete"
            android:layout_centerVertical="true"
            android:layout_marginEnd="20dp"
            android:src="@drawable/export">

        </ImageView>

        <ImageView
            android:id="@+id/iv_edit_selectAll"
            android:layout_width="120dp"
            android:layout_height="70dp"
            android:layout_toStartOf="@id/iv_edit_export"
            android:layout_centerVertical="true"
            android:layout_marginEnd="20dp"
            android:src="@drawable/selectall">

        </ImageView>

    </RelativeLayout>


    <!--这个是右上方顶部的操作栏，UE的设计就是在这个位置，比较坑-->
    <RelativeLayout
        android:id="@+id/rl_root_option"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:orientation="horizontal">

        <!--相册的编辑选项-->
        <ImageView
            android:id="@+id/iv_root_option_edit"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="120dp"
            android:contentDescription="@string/album_edit"
            android:src="@drawable/drawable_edit"
            android:visibility="gone">

        </ImageView>

        <!--USB图库的显示类型选项-->
        <LinearLayout
            android:id="@+id/ll_root_option_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="120dp">

            <ImageView
                android:id="@+id/iv_root_option_type_all"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="31dp"
                android:contentDescription="@string/usb_all_picture"
                android:src="@drawable/drawable_all_picture">

            </ImageView>

            <ImageView
                android:id="@+id/iv_root_option_type_folder"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_gravity="center_vertical"
                android:contentDescription="@string/usb_folder_picture"
                android:src="@drawable/drawable_folder_picture">

            </ImageView>
        </LinearLayout>

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/rl_toast"
        android:layout_width="494dp"
        android:layout_height="122dp"
        android:layout_gravity="center"
        android:layout_centerInParent="true"
        android:background="@mipmap/toast_494"
        android:visibility="gone">

        <TextView
            android:id="@+id/tv_toast"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:text="@string/export_ok"
            android:gravity="center"
            android:layout_centerInParent="true"
            android:textColor="@color/loading_text_color">

        </TextView>

    </RelativeLayout>

</RelativeLayout>