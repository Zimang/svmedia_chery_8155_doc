<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:id="@+id/rl_full_screen_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <View
            android:id="@+id/v_top_mask"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:layout_alignParentTop="true"
            android:background="@drawable/mask_top"
            android:visibility="gone">

        </View>

        <View
            android:id="@+id/v_bottom_mask"
            android:layout_width="match_parent"
            android:layout_height="240dp"
            android:layout_alignParentBottom="true"
            android:background="@drawable/mask_bottom"
            android:visibility="gone">

        </View>

        <com.desaysv.usbpicture.view.CanScrollViewPager
            android:id="@+id/vpPicture"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <RelativeLayout
            android:id="@+id/rl_top_control"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="61dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="100dp">

            <ImageView
                android:id="@+id/btnBack"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerVertical="true"
                android:contentDescription="@string/description_back"
                android:gravity="center"
                android:src="@drawable/drawable_back" />

            <TextView
                android:id="@+id/tv_pic_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="19dp"
                android:layout_toEndOf="@id/btnBack"
                android:gravity="center"
                android:singleLine="true"
                android:textColor="@drawable/name_fullscreen"
                android:textSize="30sp">

            </TextView>

            <ImageView
                android:id="@+id/btnSlide"
                android:layout_width="120dp"
                android:layout_height="70dp"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="20dp"
                android:src="@drawable/drawable_slide"
                android:layout_toStartOf="@id/btnFlip"
                android:contentDescription="@string/description_slide"/>

            <ImageView
                android:id="@+id/btnFlip"
                android:layout_width="120dp"
                android:layout_height="70dp"
                android:layout_gravity="center_vertical"
                android:layout_toStartOf="@id/btnExport"
                android:layout_marginEnd="20dp"
                android:contentDescription="@string/description_flip"
                android:src="@drawable/drawable_flip" />

            <ImageView
                android:id="@+id/btnExport"
                android:layout_width="120dp"
                android:layout_height="70dp"
                android:layout_marginEnd="20dp"
                android:layout_toStartOf="@id/btnDelete"
                android:contentDescription="@string/album_export"
                android:src="@drawable/drawable_export" />

            <ImageView
                android:id="@+id/btnDelete"
                android:layout_width="120dp"
                android:layout_height="70dp"
                android:layout_alignParentEnd="true"
                android:contentDescription="@string/album_delete"
                android:src="@drawable/drawable_delete" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_bottom_control"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true">

            <ImageView
                android:id="@+id/btnPre"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginStart="84dp"
                android:layout_alignParentStart="true"
                android:contentDescription="@string/description_pre"
                android:src="@drawable/drawable_pre" />

            <ImageView
                android:id="@+id/stop_slide"
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:layout_centerInParent="true"
                android:src="@drawable/drawable_play"
                android:contentDescription="@string/description_pause"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/btnNext"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="100dp"
                android:contentDescription="@string/description_next"
                android:src="@drawable/drawable_next" />
        </RelativeLayout>

    </RelativeLayout>
</RelativeLayout>