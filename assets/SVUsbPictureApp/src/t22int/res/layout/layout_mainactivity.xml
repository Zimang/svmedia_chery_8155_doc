<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="20dp"
    tools:context=".ui.MainActivity">

    <RelativeLayout
        android:id="@+id/rl_pictureList_root_control"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp"
        android:layout_marginStart="70dp"
        android:visibility="gone">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:src="@drawable/usb_picture_all_back">

        </ImageView>

        <TextView
            android:id="@+id/tv_current_dir"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@id/iv_back"
            android:layout_centerVertical="true"
            android:gravity="center_vertical|start"
            android:textColor="@color/path_color"
            android:maxWidth="700dp"
            android:text="Current dir"
            android:textSize="34sp"
            android:singleLine="true"
            android:ellipsize="end">

        </TextView>
    </RelativeLayout>

    <!--U盘名称-->
    <TextView
        android:id="@+id/tv_usb_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text="@string/usb_name"
        android:textColor="@color/usb_name_color"
        android:textSize="34sp">

    </TextView>
    <RelativeLayout
        android:id="@+id/rl_tab"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp">

        <RelativeLayout
            android:id="@+id/rl_tab0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="760dp"
            android:contentDescription="@string/album">
            <TextView
                android:id="@+id/tv_tab_title0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:textColor="@drawable/tab_text_selected"
                android:text="@string/album"
                android:textSize="30sp">

            </TextView>

            <ImageView
                android:id="@+id/iv_tab_indicator0"
                android:layout_width="50dp"
                android:layout_height="10dp"
                android:layout_below="@id/tv_tab_title0"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:src="@drawable/tab_selected">
            </ImageView>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_tab1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="990dp"
            android:contentDescription="@string/gallery">
            <TextView
                android:id="@+id/tv_tab_title1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:textColor="@drawable/tab_text_selected"
                android:text="@string/gallery"
                android:textSize="30sp">

            </TextView>

            <ImageView
                android:id="@+id/iv_tab_indicator1"
                android:layout_width="50dp"
                android:layout_height="10dp"
                android:layout_below="@id/tv_tab_title1"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:src="@drawable/tab_selected">
            </ImageView>

        </RelativeLayout>

    </RelativeLayout>

    <!--这个是右上方顶部的操作栏，UE的设计就是在这个位置，比较坑-->
    <RelativeLayout
        android:id="@+id/rl_root_option"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:orientation="horizontal">

        <!--相册的编辑选项-->
        <TextView
            android:id="@+id/tv_root_option_edit"
            android:layout_width="190dp"
            android:layout_height="72dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="140dp"
            android:contentDescription="@string/album_edit"
            android:text="@string/album_edit"
            android:background="@drawable/drawable_edit"
            android:gravity="center"
            android:textColor="@color/selector_color"
            android:textSize="30sp"
            android:visibility="gone">

        </TextView>

        <!--USB图库的显示类型选项-->
        <LinearLayout
            android:id="@+id/ll_root_option_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="120dp">

            <TextView
                android:id="@+id/tv_root_option_type_all"
                android:layout_width="wrap_content"
                android:layout_height="72dp"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="40dp"
                android:paddingStart="5dp"
                android:paddingEnd="5dp"
                android:background="@drawable/drawable_all_picture"
                android:contentDescription="@string/usb_all_picture"
                android:gravity="center"
                android:text="@string/usb_all_picture"
                android:textColor="@color/selector_color"
                android:textSize="30sp">

            </TextView>

            <TextView
                android:id="@+id/tv_root_option_type_folder"
                android:layout_width="wrap_content"
                android:layout_height="72dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/drawable_folder_picture"
                android:contentDescription="@string/usb_folder_picture"
                android:gravity="center"
                android:paddingStart="5dp"
                android:paddingEnd="5dp"
                android:text="@string/usb_folder_picture"
                android:textColor="@color/selector_color"
                android:textSize="30sp">

            </TextView>
        </LinearLayout>

    </RelativeLayout>


    <com.desaysv.usbpicture.view.CanScrollViewPager
        android:id="@+id/vp_root_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="80dp">

    </com.desaysv.usbpicture.view.CanScrollViewPager>


    <RelativeLayout
        android:id="@+id/rl_album_edit"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp"
        android:layout_marginStart="70dp"
        android:layout_marginEnd="120dp"
        android:visibility="gone">

        <ImageView
            android:id="@+id/iv_edit_close"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:src="@drawable/close"
            android:contentDescription="@string/description_close">

        </ImageView>

        <TextView
            android:id="@+id/tv_select_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textSize="30sp"
            android:textColor="@color/name_color"
            android:layout_toEndOf="@id/iv_edit_close"
            android:layout_marginStart="19dp"
            android:text="@string/select_none"
            >
        </TextView>

        <ImageView
            android:id="@+id/iv_edit_delete"
            android:layout_width="120dp"
            android:layout_height="70dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@drawable/delete"
            android:contentDescription="@string/album_delete">

        </ImageView>

        <ImageView
            android:id="@+id/iv_edit_export"
            android:layout_width="120dp"
            android:layout_height="70dp"
            android:layout_toStartOf="@id/iv_edit_delete"
            android:layout_centerVertical="true"
            android:layout_marginEnd="20dp"
            android:src="@drawable/export"
            android:contentDescription="@string/album_export">

        </ImageView>

        <ImageView
            android:id="@+id/iv_edit_selectAll"
            android:layout_width="120dp"
            android:layout_height="70dp"
            android:layout_toStartOf="@id/iv_edit_export"
            android:layout_centerVertical="true"
            android:layout_marginEnd="20dp"
            android:src="@drawable/selectall"
            android:contentDescription="@string/description_selectall">

        </ImageView>

    </RelativeLayout>


</RelativeLayout>