<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <RelativeLayout
        android:id="@+id/rlRadioMain"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tbRadioMain"
        android:layout_width="match_parent"
        android:layout_height="78dp"
        android:overScrollMode="never"
        app:tabBackground="@null"
        app:tabIndicator="@drawable/radio_tab_shape"
        app:tabIndicatorColor="@null"
        app:tabIndicatorFullWidth="false"
        app:tabIndicatorHeight="@dimen/radio_indicator_h"
        app:tabMinWidth="198dp"
        app:tabPaddingTop="@dimen/radio_tab_pading"
        app:tabRippleColor="@null"
        app:tabSelectedTextColor="@color/radio_tab_text_select_color"
        app:tabTextAppearance="@style/RadioTabTextStyle"
        app:tabTextColor="@color/radio_tab_text_unselect_color" />

    <com.desaysv.moduleradio.view.NoSmoothViewPager
        android:id="@+id/vpRadioMain"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/tbRadioMain"
        android:layout_marginTop="15dp" />

    <ImageView
        android:id="@+id/ivRadioListMask"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@mipmap/img_list_mask"
        android:visibility="gone">

    </ImageView>
        <ImageView
            android:id="@+id/ivRadioSearch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="60dp"
            android:src="@drawable/radio_search"
            android:visibility="gone">

        </ImageView>
    </RelativeLayout>
    <include
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        layout="@layout/radio_search_view">

    </include>

</RelativeLayout>