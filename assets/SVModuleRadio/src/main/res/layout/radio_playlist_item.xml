<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rlPlayListItem"
    android:layout_width="640dp"
    android:layout_height="130dp"
    android:background="@mipmap/img_radio_playlist_bg">

    <ImageView
        android:id="@+id/ivItemCollect"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@mipmap/radio_icon_like"
        android:layout_marginStart="10dp"
        android:layout_centerVertical="true"/>

    <RelativeLayout
        android:id="@+id/rlItemName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="112dp"
        android:layout_marginTop="22dp"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/tvFreq"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="FM 100"
            android:textColor="@color/radio_text_main_color"
            android:gravity="center"
            android:textSize="32sp" />

        <TextView
            android:id="@+id/tvRadioName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvFreq"
            android:layout_marginTop="5dp"
            android:textColor="@color/radio_text_sub_color"
            android:textSize="24sp" />

    </RelativeLayout>

    <com.desaysv.mediacommonlib.view.AudioWaveView
        android:id="@+id/ivItemPlay"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="94dp"
        app:pointer_color="@color/radio_item_play_color"
        app:pointer_num="4"
        app:pointer_padding="0dp"
        app:pointer_sing_law_rate="0.2"
        app:pointer_top_fillet="0"
        app:pointer_width="3.5dp" />

</RelativeLayout>