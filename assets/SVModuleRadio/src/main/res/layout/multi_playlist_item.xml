<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rlDABPlayItem"
    android:layout_width="match_parent"
    android:layout_height="130dp"
    android:layout_marginStart="36dp"
    android:layout_marginEnd="14dp"
    android:background="@drawable/dab_play_item_bg"
    tools:ignore="ResourceName">


    <ImageView
        android:id="@+id/ivDABPlayListLike"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="40dp"
        android:layout_centerVertical="true"
        android:src="@drawable/dab_like">

    </ImageView>

    <com.desaysv.mediacommonlib.view.AudioWaveView
        android:id="@+id/tvDABPlayListAni"
        android:layout_width="33dp"
        android:layout_height="22dp"
        android:layout_centerVertical="true"
        app:pointer_color="@color/dab_playani_color"
        app:pointer_num="5"
        app:pointer_padding="0dp"
        app:pointer_sing_law_rate="0.2"
        app:pointer_top_fillet="0"
        app:pointer_width="3.5dp"
        app:pointer_type="center"
        android:visibility="visible">

    </com.desaysv.mediacommonlib.view.AudioWaveView>



    <com.desaysv.mediacommonlib.ui.MarqueeTextView
        android:id="@+id/tvDABPlayListName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="70dp"
        android:layout_centerVertical="true"
        android:singleLine="true"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:ellipsize="marquee"
        android:marqueeRepeatLimit="marquee_forever"
        android:textColor="@color/dab_selector_color"
        android:layout_toStartOf="@id/tvMultiType"
        android:layout_alignParentStart="true"
        android:textSize="30sp">

    </com.desaysv.mediacommonlib.ui.MarqueeTextView>

    <TextView
        android:id="@+id/tvMultiType"
        android:layout_width="100dp"
        android:layout_height="42dp"
        android:background="@drawable/radio_multitype_bg"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="156dp"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:textColor="@color/radio_text_sub_color"
        android:textSize="26sp">

    </TextView>


</RelativeLayout>