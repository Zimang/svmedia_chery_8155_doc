<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rlRDSTADialog"
    android:layout_width="722dp"
    android:layout_height="510dp"
    android:layout_gravity="center"
    android:background="@drawable/ta_dialog_bg">


        <ImageView
            android:id="@+id/ivRDSRTCLose"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="20dp"
            android:src="@mipmap/ta_dialog_close">

        </ImageView>


        <TextView
            android:id="@+id/tvRDSRTTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:text="@string/radio_rds_info"
            android:textColor="@color/radio_ta_text_color"
            android:textSize="34sp">

        </TextView>

        <TextView
            android:id="@+id/tvRDSRTInfo"
            android:layout_width="match_parent"
            android:layout_height="344dp"
            android:layout_marginStart="60dp"
            android:layout_marginTop="118dp"
            android:layout_marginEnd="10dp"
            android:paddingEnd="44dp"
            android:scrollbarStyle="outsideInset"
            android:scrollbarSize="6dp"
            android:scrollbarThumbVertical="@color/radio_scrollbar_color"
            android:scrollbars="vertical"
            android:textColor="@color/radio_ta_text_color"
            android:textSize="28sp"
            android:gravity="center">

        </TextView>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="60dp"
            android:layout_marginTop="118dp"
            android:src="@mipmap/ta_dialog_top_mask"
            android:alpha="@integer/radio_mask_alpha">

        </ImageView>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="60dp"
            android:layout_marginBottom="48dp"
            android:src="@mipmap/ta_dialog_foot_mask"
            android:alpha="@integer/radio_mask_alpha">

        </ImageView>
</RelativeLayout>