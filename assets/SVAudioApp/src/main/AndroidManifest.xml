<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.desaysv.svaudioapp"
    android:sharedUserId="android.uid.system">

    <uses-feature
        android:name="android.hardware.type.automotive"
        android:required="true" />

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    <!--Android 11 引入了强制分区，直接访问分区需此权限-->
    <uses-permission
        android:name="android.permission.MANAGE_EXTERNAL_STORAGE"
        tools:ignore="ScopedStorage" />
    <!--Android 11 引入了包可见性，启动服务需添加此服务-->
    <uses-permission
        android:name="android.permission.QUERY_ALL_PACKAGES"
        tools:ignore="QueryAllPackagesPermission" />

    <application
        android:name=".application.BaseApplication"
        android:allowBackup="false"
        android:appCategory="audio"
        android:icon="@mipmap/launcher_audio_icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="@bool/audio_support_rtl"
        android:theme="@style/Theme.Chery8155app">
        <activity
            android:name=".ui.MainActivity"
            android:exported="true"
            android:launchMode="singleTask">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!--媒体SDK启动对接操作的服务-->
        <service
            android:name=".services.MediaSdkControlService"
            android:enabled="true"
            android:exported="true">
            <intent-filter>
                <action android:name="com.desaysv.mediaapp.action.startSource" />
            </intent-filter>
        </service>

    </application>

</manifest>