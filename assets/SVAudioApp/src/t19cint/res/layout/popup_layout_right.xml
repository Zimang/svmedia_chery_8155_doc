<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="240dp"
    android:minWidth="@dimen/radio_pop_width"
    android:background="@drawable/pop_bg"
    tools:context=".ui.MainActivity"
    android:layoutDirection="ltr">

    <RelativeLayout
        android:id="@+id/rlPopRadio"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/pop_item_bg">

        <ImageView
            android:id="@+id/ivPopRadio"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginStart="42dp"
            android:src="@mipmap/icon_radio"
            android:layout_centerVertical="true">

        </ImageView>

        <TextView
            android:id="@+id/tvPopRadio"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="22dp"
            android:layout_marginEnd="30dp"
            android:layout_toEndOf="@id/ivPopRadio"
            android:gravity="start|center_vertical"
            android:text="@string/pop_radio"
            android:textColor="@color/pop_item_text_color"
            android:textSize="28sp">

        </TextView>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rlPopBTMusic"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/pop_item_bg"
        android:layout_below="@id/rlPopRadio">

        <ImageView
            android:id="@+id/ivPopBTMusic"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@mipmap/icon_bt"
            android:layout_marginStart="42dp"
            android:layout_centerVertical="true">

        </ImageView>

        <TextView
            android:id="@+id/tvPopBTMusic"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="22dp"
            android:layout_marginEnd="30dp"
            android:layout_toEndOf="@id/ivPopBTMusic"
            android:gravity="start|center_vertical"
            android:text="@string/pop_btmusic"
            android:textColor="@color/pop_item_text_color"
            android:textSize="28sp">

        </TextView>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rlPopLocalMusic"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/pop_item_bg"
        android:layout_below="@id/rlPopBTMusic">

        <ImageView
            android:id="@+id/ivPopLocalMusic"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@mipmap/icon_music"
            android:layout_marginStart="42dp"
            android:layout_centerVertical="true">

        </ImageView>

        <TextView
            android:id="@+id/tvPopLocalMusic"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@id/ivPopLocalMusic"
            android:layout_marginStart="22dp"
            android:layout_marginEnd="30dp"
            android:text="@string/pop_localmusic"
            android:textSize="28sp"
            android:gravity="start|center_vertical"
            android:textColor="@color/pop_item_text_color">

        </TextView>
    </RelativeLayout>


</RelativeLayout>